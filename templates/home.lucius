@elHeight: 40vh;
/* 27.2 = 40 / 1000 * 680, the dimentions of the images */
@elWidth: 27.2vh;
@elFocusScale: 1.2;

.container {
  display: flex;
  flex-direction: column;
  padding-bottom: 10rem;

  h1 {
    text-align: center;
    z-index: 100;
    padding: 0;
    margin: 1em 0 0 0;
  }
}

.row {
  display: flex;
  flex-direction: row;
  gap: 15pt;
  overflow-x: scroll;
  overflow-y: hidden;
  /* Add padding that is just the right size needed to accomodate a scaled
    element, so that it'll never to clipped as we're in a scroll element here.
  */
  padding: calc((#{elFocusScale} - 1) / 2 * #{elHeight}) calc((#{elFocusScale} - 1) / 2 * #{elWidth} + 4pt);
}

.el {
  flex-shrink: 0;
  background-color: midnightblue;
  position: relative;

  /* This removed the line under the alt-text. The rest of the styling is later */
  text-decoration: none;

  img {
    width: #{elWidth};
    height: #{elHeight};
    object-fit: cover;

    &.logo {
      height: #{elWidth};
      object-fit: contain;
      background-color: white;
      padding:calc(#{elWidth} * 0.05);
    }

    /* Styles for the alt text */
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    text-align: center;
    font-size: xx-large;
  }

  &:focus {
    outline: none;
    transform: scale(#{elFocusScale});
    z-index: 10;
  }

  .watched {
    font-size: 1.8rem;
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 0.2em 0.4em 0.3em 0.5em;
    color: white;
    background-color: rgba(0, 0, 0, 0.5);
    border-top-left-radius: 0.7em;
    display: flex;
    align-items: center;
    gap: 0.2em;

    .fa-eye {
      font-size: 0.8em;
    }
  }
}