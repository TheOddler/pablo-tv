@gap: 15pt;
@elWidth: 20vw;
/* 29.41 = 20 * 1000 / 680, the dimentions of the images */
@elHeight: 29.411vw;
@elFocusScale: 1.2;

.container {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  gap: #{gap};
  overflow-x: scroll;
  padding: calc((#{elFocusScale} - 1) / 2 * #{elHeight}) calc((#{elFocusScale} - 1) / 2 * #{elWidth});
}

.el {
  flex-shrink: 0;
  width: #{elWidth};
  height: #{elHeight};
  background-color: olive;
  position: relative;
  transition: all 0.5s;

  img {
    width: #{elWidth};
    height: #{elHeight};
    object-fit: cover;
  }

  &:focus {
    outline: none;
    transform: scale(#{elFocusScale});
    z-index: 100;

    &::before {
      box-shadow: inset 0 0 15pt 0 black;
      border: solid lightblue 2pt;

      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
    }
  }
}