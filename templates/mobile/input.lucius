#trackpad {
  border-radius: 2vw;
  box-sizing: border-box;
  background: #333;
  width: 100%;
  height: 100%;

  box-shadow:
    inset 0.5pt -1pt 1pt 0.5pt rgba(0, 0, 0, 0.3),
    inset -0.5pt 0.5pt 0.1pt 0.1pt rgba(255, 255, 255, 0.6),
    0.5pt -0.5pt 1pt 1.5pt rgba(0, 0, 0, 1),
    -0.5pt 1pt 1pt 1.5pt rgba(255, 255, 255, 0.3),
    0 0 50pt 5pt rgba(255, 255, 255, 0.2);
}